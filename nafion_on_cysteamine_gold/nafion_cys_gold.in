boundary p p f
# ----------------- Init Section -----------------

include "nafion_cys_gold.in.init"


# ----------------- Atom Definition Section -----------------

read_data "nafion_cys_gold.data"

# ----------------- Settings Section -----------------

include "nafion_cys_gold.in.settings"

neighbor        3.0 bin
neigh_modify delay 0 every 1 check yes
kspace_modify slab ew2d

group water type 8 9
group electrode type 10 11
group electrolyte type 1 2 3 4 5 6 7 8 9 12 13 14 15 16 17

compute        ctemp electrolyte temp

velocity       electrode set 0.0 0.0 0.0
fix            2 electrode setforce 0.0 0.0 0.0

fix 1 water shake 0.0001 20 0 b 10 a 21
fix fxnvt electrolyte nvt temp 300.0 300.0 $(100.0*dt)

dump 1 all custom 500 nafion_cys_gold.lammpstrj id mol type q x y z
dump 2 all custom 500 nafion_cys_gold_unwrapped.lammpstrj id mol type q xu yu zu
dump_modify 1 sort 1
dump_modify 2 sort 2

thermo         500
thermo_style   custom step temp press vol density vol c_ctemp epair etotal xlo xhi ylo yhi zlo zhi 

restart 200000 nafion_cys_gold.restart

timestep 1

# ----------------- Run Section -----------------
#20 ns
run 20000000

write_data nafion_cys_gold_nvt.data
write_restart nafion_cys_gold_nvt.restart

